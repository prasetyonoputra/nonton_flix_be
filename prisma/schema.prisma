generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id                  Int                   @id @default(autoincrement())
  name                String
  email               String                @unique
  password            String
  roleId              Int
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  accountSetting      AccountSetting?
  Comment             Comment[]
  ContentSale         ContentSale[]
  donationsGiven      Donation[]            @relation("DonationFrom")
  donationsReceived   Donation[]            @relation("DonationTo")
  friendsReceived     Friend[]              @relation("FriendOf")
  friendsSent         Friend[]              @relation("UserFriends")
  notifications       Notification[]
  Playlist            Playlist[]
  points              Point[]
  PremiumSubscription PremiumSubscription[]
  profile             Profile?
  Rating              Rating[]
  rewards             Reward[]
  role                Role                  @relation(fields: [roleId], references: [id])
  Video               Video[]
}

model Profile {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Friend {
  id        Int      @id @default(autoincrement())
  userId    Int
  friendId  Int
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  friend    User     @relation("FriendOf", fields: [friendId], references: [id])
  user      User     @relation("UserFriends", fields: [userId], references: [id])

  @@unique([userId, friendId])
}

model Point {
  id        Int      @id @default(autoincrement())
  userId    Int
  value     Int
  reason    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Reward {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String?
  redeemed    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model AccountSetting {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  theme     String?
  language  String?
  privacy   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Video {
  id          Int             @id @default(autoincrement())
  title       String
  url         String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  description String?
  thumbnail   String?
  userId      Int
  AdVideo     AdVideo[]
  comments    Comment[]
  ContentSale ContentSale[]
  Donation    Donation[]
  playlists   PlaylistVideo[]
  ratings     Rating[]
  user        User            @relation(fields: [userId], references: [id])
  categories  VideoCategory[]
  tags        VideoTag[]
}

model Category {
  id     Int             @id @default(autoincrement())
  name   String          @unique
  videos VideoCategory[]
}

model VideoCategory {
  id         Int      @id @default(autoincrement())
  videoId    Int
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  video      Video    @relation(fields: [videoId], references: [id])

  @@unique([videoId, categoryId])
}

model Tag {
  id     Int        @id @default(autoincrement())
  name   String     @unique
  videos VideoTag[]
}

model VideoTag {
  id      Int   @id @default(autoincrement())
  videoId Int
  tagId   Int
  tag     Tag   @relation(fields: [tagId], references: [id])
  video   Video @relation(fields: [videoId], references: [id])

  @@unique([videoId, tagId])
}

model Comment {
  id        Int       @id @default(autoincrement())
  videoId   Int
  userId    Int
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  parentId  Int?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  user      User      @relation(fields: [userId], references: [id])
  video     Video     @relation(fields: [videoId], references: [id])
}

model Rating {
  id        Int      @id @default(autoincrement())
  videoId   Int
  userId    Int
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  video     Video    @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model Playlist {
  id          Int             @id @default(autoincrement())
  userId      Int
  name        String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  description String?
  isPublic    Boolean         @default(true)
  user        User            @relation(fields: [userId], references: [id])
  videos      PlaylistVideo[]
}

model PlaylistVideo {
  id         Int      @id @default(autoincrement())
  playlistId Int
  videoId    Int
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  video      Video    @relation(fields: [videoId], references: [id])

  @@unique([playlistId, videoId])
}

model AdVideo {
  id        Int      @id @default(autoincrement())
  videoId   Int
  title     String
  revenue   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  video     Video    @relation(fields: [videoId], references: [id])
}

model PremiumSubscription {
  id        Int      @id @default(autoincrement())
  userId    Int
  startDate DateTime @default(now())
  endDate   DateTime
  price     Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Donation {
  id         Int      @id @default(autoincrement())
  fromUserId Int
  toUserId   Int
  videoId    Int?
  amount     Float
  message    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  fromUser   User     @relation("DonationFrom", fields: [fromUserId], references: [id])
  toUser     User     @relation("DonationTo", fields: [toUserId], references: [id])
  video      Video?   @relation(fields: [videoId], references: [id])
}

model ContentSale {
  id        Int      @id @default(autoincrement())
  contentId Int
  buyerId   Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  buyer     User     @relation(fields: [buyerId], references: [id])
  video     Video    @relation(fields: [contentId], references: [id])
}
